/* pages/goodsList/goodsList.wxss */
.top{
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
  align-items: center;
}
.inp{
  border: 1px solid rgb(141, 140, 140);
  width: 650rpx;
  border-radius: 50px;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
  padding: 0 30rpx;
}
.icon{
  font-size: 20px;
}
.tabber{
   width: 100%;
   display: flex;
  
}
.li{
  width: 25%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}
.red{
  color: red;
}
.body{
  width: 100%;
  background-color: #eee;
  box-sizing: border-box;
  padding: 0 10rpx;
  overflow: hidden;
}
.one{
  width: 100%;
  height: 216rpx;
  border-radius: 15px;
  margin-top: 15rpx;
  background-color: #fff;
  /* background-color: red; */
  display: flex;
}
.oneLeft{
  width: 30%;
  height: 100%;
}
.image{
  width: 100%;
  height: 100%;
}
.desc{
  font-size: 13px;
  color: rgb(133, 131, 131);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}
.price{
  display: flex;
  align-items: baseline;
}
.newPrice{
  color: red;
}
.oldPrice{
  color:  rgb(133, 131, 131);
  text-decoration: line-through;
  font-size: 13px;
  margin-left: 15rpx;
}
.mai{
  color:  rgb(133, 131, 131);
  font-size: 13px;
}
.oneRight{
  width: 70%;
  box-sizing: border-box;
  padding: 15rpx;
}
.icon1{
  width: 100%;
  color: red;
  font-size: 25px;
  display: flex;
  justify-content: space-between;
}
.img{
  width: 20px;
  height: 20px;
}
.box2{
  width: 100%;
  background-color: #eee;
  box-sizing: border-box;
  padding: 0 10rpx;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.one1{
  width: 49%;
  height: 570rpx;
  border-radius: 15px;
  margin-top: 20rpx;
  background-color: #fff;
  /* background-color: red; */
  position: relative;
}
.imageBox{
  width: 100%;
  height: 60%;
}
.ico{
  position: absolute;
  bottom: 0rpx;
  right: 30rpx;
  font-size: 25px;
  color: red;
}
.goodBody{
  box-sizing: border-box;
  padding: 5rpx 15rpx;
}
.name{
  text-overflow: -o-ellipsis-lastline;
	overflow: hidden;			
	text-overflow: ellipsis;	
	display: -webkit-box;	
	-webkit-line-clamp: 2;			
	line-clamp: 2;					
	-webkit-box-orient: vertical;	

}