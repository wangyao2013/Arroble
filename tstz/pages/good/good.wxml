<!--pages/good/good.wxml-->
<!-- <text>pages/good/good.wxml</text> -->
<view class="tab">
  <view class="tabOne {{i==0?'active':''}}" bind:tap="change" data-index="0">
    商品简介
  </view>
  <view class="tabOne {{i==1?'active':''}}" bind:tap="change" data-index="1">
    商品详情
  </view>
  <view class="tabOne {{i==2?'active':''}}" bind:tap="change" data-index="2">
    商品评价
  </view>
</view>
<swiper class="swiper" circular autoplay indicator-dots>
  <swiper-item class="item" wx:for="{{good.pics}}" wx:key="index">
    <image class="image" mode="heightFix widthFix" src="{{item.pic}}"></image>
  </swiper-item>
</swiper>
<view class="body">
  <view class="box2">
    <view class="ewm">
      <image class="imagef" src="/images/fenxiang.png"></image>
      <view>分享</view>
    </view>
    <view class="ewm">
      <image class="imagef" src="/images/erweima.png"></image>
      <view>二维码</view>
    </view>
  </view>
  <view class="goodPrice">
    <view class="newPrice">
      <text>￥</text>
      <text class="font">{{good.basicInfo.minPrice}}</text>
    </view>
    <view class="oldPrice">
      <text>￥</text>
      <text >{{good.basicInfo.originalPrice}}</text>
    </view>
  </view>
  <view class="goodName">
    {{good.basicInfo.name}}
  </view>
  <view class="goodDesc">
  {{good.basicInfo.characteristic}}
  </view>
  <!-- 根据不同商品判断是有显示隐藏 -->
  <view class="show">
    <view class="xj">分享有赏，好友下单可得5元现金奖励</view>
    <view class="fenge"></view>
  </view>
</view>
<!-- 商品详情 -->
<view class="xiangQ">
<view class="nb">
商品详情
</view>
</view>
<rich-text class="hotspot-rich-text" nodes="{{content}}"></rich-text>
<!-- 操作导航 -->
<van-goods-action>
  <van-goods-action-icon icon="chat-o" text="客服"  />
  <van-goods-action-icon icon="cart-o" text="购物车"  />
  <van-goods-action-icon icon="shop-o" text="店铺" />
  <van-goods-action-button text="加入购物车"   bind:tap="showPopup" data-item="{{item.id}}" type="warning" />
  <van-goods-action-button text="立即购买"  bind:tap="showPopup" data-item="{{item.id}}" />
</van-goods-action>
<!-- 弹出层 -->
<van-popup class="popup" show="{{ show }}" round position="bottom"  bind:close="onClose">
  <view class="popLi">
    <view class="popImage">
      <image class="image" src="{{good.basicInfo.pic}}"></image>
    </view>
    <view class="popDesc">
      <view class="popDescname">
        {{good.basicInfo.name}}
      </view>
      <view class="popPrice">
        ￥{{good.basicInfo.minPrice}}
      </view>
    </view>
  </view>
  <view class="lx" wx:for="{{good.properties}}" wx:key="index">
    <view class="csName">{{item.name}}</view>
    <view class="child">
      <view class="color {{ele.id==i2?'red':''}}" bindtap="changeSize" data-item="{{ele.id}}" wx:for="{{item.childsCurGoods}}" wx:for-item="ele" wx:key="i">
        {{ele.name}}
      </view>
    </view>
  </view>
  <view class="buyNum">
    <text>购买数量</text>
    <van-stepper value="{{ num }}" bind:change="onChange" />
  </view>
  <van-button class="addCar" bindtap="showPopup" type="danger">加入购物车</van-button>
</van-popup>