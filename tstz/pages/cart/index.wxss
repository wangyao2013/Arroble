/* pages/cart/index.wxss */
.tit{
  width: 100%;
  height: 80rpx;
  background-color: #eee;
  line-height: 80rpx;
  color: rgb(107, 106, 104);
  padding-left: 20rpx;
}
.body{
  width: 100%;
  background-color: #eee;
  min-height: calc(100vh - 80rpx);
  box-sizing: border-box;
  padding-bottom: 100rpx;
}
.li{
  /* width: 15%; */
  width: 100%;
  height: 220rpx;
  margin-bottom: 25rpx;
  box-sizing: border-box;
  background-color: #fff;
  padding: 10rpx  20rpx;
}
.image{
  width: 77.56px !important;
  /* width: 150rpx; */
  height: 80%;
}
.prices{
  display: flex;

  justify-content: space-between;
}
.show{
  width: 70%;
  height: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 20rpx;
  flex-direction: column;
  justify-content: space-between;
}
.name{
   width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.swipe{
  width:100%;
  height: 220rpx;
  display: flex;
  align-items: center;
  /* margin-bottom: 25rpx; */
  box-sizing: border-box;
  background-color: #fff;
  padding: 10rpx  20rpx;
}
.del{
  height: 100% !important;
}
.van-button{
   height: 100% !important;
}
.price{
  color: red;
}
.footer{
  display: flex;
  height: 100rpx;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  padding: 10rpx 20rpx ;
}
.js{
  width: 200rpx;
  height: 100%;
  text-align: center;
  border-radius: 50px;
  background-color: red;
}
.js .van-button--danger{
  border-radius: 50px !important;
}
.sku{
  display: flex;
  font-size: 13px;
  color: rgb(116, 113, 113);

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.skuOne{
  display: flex;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.tex{
  margin-right: 5rpx;
}
