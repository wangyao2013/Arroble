/* pages/likeList/likeList.wxss */
.box{
  width: 100%;
  min-height: 100vh;
  background-color: #eee;
}
.body{
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  justify-content: space-between;
}
.li{
  width: 48%;
  border-radius: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.top{
  width: 100%;
  /* height: 300rpx; */
}
.image{
  /* border-radius: 30rpx; */
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  width: 100%;
  height: 350rpx;
}
.name{
  height: 76.7rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  font-size: 14px;
  text-overflow: -o-ellipsis-lastline;
	overflow: hidden;				
	text-overflow: ellipsis;	
	display: -webkit-box;			
	-webkit-line-clamp: 2;			
	line-clamp: 2;					
  -webkit-box-orient: vertical;	
  /* text-align: center; */

}
.cz{
  font-size: 30px;
  color: red;
  text-align: center;
}